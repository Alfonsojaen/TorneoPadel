<VBox alignment="CENTER" prefHeight="420.0" prefWidth="599.0" spacing="10" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="github.alfonsojaen.view.ControllerTxt">
   <AnchorPane prefHeight="200.0" prefWidth="200.0">
      <children>
         <Text layoutX="65.0" layoutY="63.0" strokeType="OUTSIDE" strokeWidth="0.0" text="GENERADOR DE ARCHIVO">
            <font>
               <Font name="Calibri Bold Italic" size="40.0" />
            </font>
         </Text>
         <ImageView fitHeight="26.0" fitWidth="83.0" layoutX="1.0" layoutY="1.0" onMouseClicked="#switchToMenuTournament" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@../../../icons/LetsIconsBack.png" />
            </image>
         </ImageView>
      </children>
   </AnchorPane>
   <AnchorPane prefHeight="404.0" prefWidth="559.0">
      <children>
          <!-- Título -->
      
      
          <!-- Título de la ventana -->
      
          <!-- ComboBox para seleccionar el torneo -->
          <ComboBox fx:id="cbTournaments" layoutX="180.0" layoutY="14.0" minWidth="200" promptText="Selecciona un torneo" />
      
          <!-- Botón para exportar los datos a un archivo -->
          <Button layoutX="180.0" layoutY="71.0" minWidth="200" onAction="#generateFile" style="-fx-font-size: 14; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-border-radius: 5; -fx-padding: 10;" text="Exportar Datos a Archivo" />
      </children>
   </AnchorPane>

</VBox>
